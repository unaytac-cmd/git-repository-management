# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# 2 space indentation
[*.{js,jsx,ts,tsx,json,yaml,yml,md}]
indent_style = space
indent_size = 2

# 4 space indentation for Python
[*.py]
indent_style = space
indent_size = 4

# 4 space indentation for Makefiles
[Makefile]
indent_style = tab

# 2 space indentation for shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML
[*.{yaml,yml}]
indent_style = space
indent_size = 2
